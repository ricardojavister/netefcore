@model mvcapp.Models.product

@{
    ViewData["Title"] = "Edit";
}

<h1>Delete Product</h1>

<form class="col-lg-8 mx-lg-auto" method="post" id="form">
    <fieldset>
        <div class="form-group">
            <label class="col-md-4 control-label">Name</label>
            <input type="hidden" name="idproduct" id="idproduct" value="@Model.idproduct" />
            <div class="col-md-8 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-star"></i></span>
                    <input name="productname" placeholder="Name" value="@Model.productname" class="form-control" type="text">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">Price</label>
            <div class="col-md-8 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                    <input name="price" placeholder="price" value="@Model.price" class="form-control" type="number">
                </div>
            </div>
        </div>
        <div class="form-group action-buttons">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Delete</button>
            </div>
        </div>

    </fieldset>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
